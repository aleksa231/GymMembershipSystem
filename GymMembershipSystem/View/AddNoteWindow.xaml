<Window x:Class="GymMembershipSystem.View.AddNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Note" Height="300" Width="420">
    <Grid Background="{DynamicResource BackgroundBrush}">
        <TextBox Name="NoteTextBox" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Width="300" Height="150" Margin="50,0,50,0" Background="{DynamicResource BackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}" FontFamily="{StaticResource DefaultFontFamily}"/>
        <Button Content="Save Note" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20" Click="SaveNoteButton_Click" Background="{DynamicResource BackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}" FontFamily="{StaticResource DefaultFontFamily}"/>
    </Grid>
</Window>

